<% if (user) { %>
  <p>User <%= user.name %> is logged on.</p>
  <form method="POST" action="/user/logoff">
  <button>Logoff</button>
</form>
<% } %>

<% if (errors) {
  errors.forEach((err) => { %>
    <div>Error: <%= err %></div>
<% }) } %>
<% if (info) {
  info.forEach((msg) => { %>
    <div>Info: <%= msg %></div>
<% }) } %>
<hr />