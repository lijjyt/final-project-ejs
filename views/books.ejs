<%- include("partials/head.ejs") %>
<%- include("partials/headers.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Books</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/main.css">
  <a href="/books/create"><button type="button">New Book</button> </a>
</head>
<body>
  <h1>-------</h1>
  <label for="sortDropdown">Sort By:</label>
  <select id="sortDropdown" >
      <option value="title">Title</option>
      <option value="author">Author</option>
      <option value="date">Date</option>
  </select>
  <select id="sortOrderDropdown" >
      <option value="asc">Ascending</option>
      <option value="desc">Descending</option>
  </select>
<div id="library-container">
  <% books.forEach(book => { %>
    <div class="library-tile" data-toggle="modal" data-target="#bookModal" data-id="<%= book._id.toString() %>" data-title="<%= book.title %>" data-author="<%= book.author %>" data-status="<%= book.status %>" data-start="<%= book.start %>" data-finish="<%= book.finish %>" data-rec="<%= book.recommend %>" data-created="<%= book.createdAt %>">
        <strong><%= book.title %></strong> -  <%= book.author %>
    </div>
    <% }); %>
</div>
    <%- include("modals/bookModal.ejs") %>
    <%- include("modals/editModal.ejs") %>


  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
  <script src="/scripts/main.js"></script>
</body>
</body>
</html>