<%- include("partials/head.ejs") %>
<%- include("partials/headers.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Books</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/main.css">
  <a href="/books/create"><button type="button">New Book</button> </a>
</head>
<body>
  <h1>-------</h1>
  <% books.forEach(book => { %>
    <div class="book-tile" data-toggle="modal" data-target="#bookModal" data-id="<%= book._id.toString() %>" data-title="<%= book.title %>" data-author="<%= book.author %>" data-status="<%= book.status %>" data-start="<%= book.start %>" data-finish="<%= book.finish %>" data-rec="<%= book.rec %>">
        <%= book.title %> by <%= book.author %>
    </div>
    <% }); %>


  <div class="modal fade" id="bookModal" tabindex="-1" role="dialog" aria-labelledby="bookModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="bookModalLabel">Book Details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <h4>Title: <span id="bookTitle"></span></h4>
            <h4>Author: <span id="bookAuthor"></span></h4>
            <h4>Status: <span id="bookStatus"></span></h4>
            <h4>Started At: <span id="bookStart"></span></h4>
            <h4>Finished At: <span id="bookFinish"></span></h4>
            <h4>Recommend: <span id="bookRec"></span></h4>

            
            <button type="button" class="btn btn-primary" id="editBookBtn">Edit</button>
            <a href="#" class="btn btn-danger deleteBookBtn" id="deleteBookBtn" data-id="">Delete</a>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
  <script src="/scripts/main.js"></script>
</body>
</body>
</html>