<%- include("partials/head.ejs") %>
<%- include("partials/headers.ejs") %>

<h2>Search Results</h2>

<% if (books && books.length > 0) { %>
    <ul>
        <% books.forEach(book => { %>
            <li>
                <strong><%= book.volumeInfo.title %></strong> by <%= book.volumeInfo.authors.join(', ') %>
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <p>No results found.</p>
<% } %>